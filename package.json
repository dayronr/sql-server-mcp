{
  "name": "mssql-mcp-server",
  "version": "1.0.0",
  "description": "Production-ready Database MCP Server with stored procedure management",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "npm run test:scenarios",
    "test:connection": "node test/test-connection.js",
    "test:db": "node test/test-db-objects.js",
    "test:scenarios": "node test/test-mcp-scenarios.js",
    "test:all": "npm run test:connection && npm run test:db && npm run test:scenarios",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "mcp",
    "mssql",
    "sql-server",
    "database",
    "stored-procedures"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "dotenv": "^16.4.5",
    "mssql": "^11.0.1",
    "sql-formatter": "^15.3.0",
    "tedious": "^18.6.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/mssql": "^9.1.5",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
